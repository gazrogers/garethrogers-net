#!/bin/bash

cmd="$1"
shift
args="$@"

pass=0

run_test(){
	num=$1
	expected=$2
	got=$("$cmd" "$args")
	if cmp -s <(echo $got) <(echo $expected); then
		echo "Test #$num: $(printf '\e[1;32mPASS\e[0m')"
		pass=$((pass + 1))
	else
		echo "Test #$num: $(printf '\e[1;31mFAIL\e[0m') Expected: <$expected>, got: <$got>"
	fi
}

run_test 1 "YES" <<EOD
1
6 12 5
EOD

run_test 2 "YES" <<EOD
6
1 12 3
1 12 4
1 12 1
1 12 5
1 12 3
1 12 5
EOD

run_test 3 "NO" <<EOD
1
4 3 13
EOD

run_test 4 "NO" <<EOD
1
6 12 6
EOD

run_test 5 "YES" <<EOD
